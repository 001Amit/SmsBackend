<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="/socket.io/socket.io.js"></script>
  <style>
    body { background-color: #f8f9fa; }
    .dashboard-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
    }
    .table td.message-cell {
      white-space: pre-wrap;
      word-break: break-word;
      max-width: 500px;
      font-size: 0.95rem;
    }
    .device-badge {
      font-size: 0.75rem;
      background-color: #6c757d;
      color: white;
      border-radius: 0.25rem;
      padding: 0.15rem 0.4rem;
      margin-left: 0.25rem;
    }
    .sidebar {
      border-right: 1px solid #dee2e6;
      min-width: 200px;
    }
    .forwarder-item {
      padding: 0.5rem 1rem;
      cursor: pointer;
      border-bottom: 1px solid #e9ecef;
    }
    .forwarder-item.active {
      background-color: #0d6efd;
      color: white;
    }
    .forwarder-list {
      max-height: 400px;
      overflow-y: auto;
    }
  </style>
</head>
<body>
<div class="container py-4">
  <div class="dashboard-header mb-4">
    <h1 class="mb-0">ðŸ“© Admin Dashboard</h1>
    <a href="/admin/logout" class="btn btn-danger">Logout</a>
  </div>

  <div class="row">
    <!-- Sidebar: Active Forwarders -->
    <div class="col-md-3 sidebar">
      <h5 class="mt-2">Active Forwarders</h5>
      <div class="forwarder-list">
        <% if (forwarders && forwarders.length > 0) { %>
          <% forwarders.forEach(function(fwd) { %>
            <div class="forwarder-item <%= selectedForwarder && selectedForwarder.deviceId === fwd.deviceId ? 'active' : '' %>"
                 data-device="<%= fwd.deviceId %>">
              <%= fwd.deviceId %>
            </div>
          <% }) %>
        <% } else { %>
          <p class="text-muted ms-2">No active forwarders</p>
        <% } %>
      </div>
    </div>

    <!-- Messages Table -->
    <div class="col-md-9">
      <div class="card shadow-sm">
        <div class="card-body p-0">
          <table class="table table-hover table-striped mb-0">
            <thead class="table-dark">
              <tr>
                <th>Sender</th>
                <th>Message</th>
                <th>Received At</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody id="messagesBody">
              <% if (messages && messages.length > 0) { %>
                <% messages.forEach(function(msg) { %>
                  <tr data-id="<%= msg._id %>">
                    <td>
                      <%= msg.sender %>
                      <% if (msg.deviceId) { %>
                        <span class="device-badge"><%= msg.deviceId %></span>
                      <% } %>
                    </td>
                    <td class="message-cell"><%= msg.message %></td>
                    <td><%= new Date(msg.createdAt).toLocaleString() %></td>
                    <td>
                      <form action="/admin/messages/<%= msg._id %>/delete" method="POST" onsubmit="return confirm('Delete this message?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="4" class="text-center">No messages found</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Pagination controls -->
      <% if (!selectedForwarder) { %>
      <nav aria-label="Page navigation example" class="mt-3">
        <ul class="pagination justify-content-center">
          <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
            <a class="page-link" href="/admin/dashboard?page=<%= currentPage - 1 %>" tabindex="-1">Previous</a>
          </li>
          <li class="page-item disabled">
            <span class="page-link">
              Page <%= currentPage %> of <%= totalPages %>
            </span>
          </li>
          <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
            <a class="page-link" href="/admin/dashboard?page=<%= currentPage + 1 %>">Next</a>
          </li>
        </ul>
      </nav>
      <% } %>
    </div>
  </div>
</div>

<script>
  const socket = io();
  const tbody = document.getElementById('messagesBody');
  const forwarderItems = document.querySelectorAll('.forwarder-item');

  function renderRow(msg) {
    const deviceBadge = msg.deviceId
      ? `<span class="device-badge">${msg.deviceId}</span>`
      : '';
    return `
      <tr data-id="${msg._id}">
        <td>${msg.sender} ${deviceBadge}</td>
        <td class="message-cell">${msg.message}</td>
        <td>${new Date(msg.createdAt).toLocaleString()}</td>
        <td>
          <form action="/admin/messages/${msg._id}/delete" method="POST" onsubmit="return confirm('Delete this message?');">
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
          </form>
        </td>
      </tr>
    `;
  }

  function addMessage(msg) {
    if (!tbody.querySelector(`[data-id="${msg._id}"]`)) {
      tbody.insertAdjacentHTML('afterbegin', renderRow(msg));
    }
  }

  // Load initial messages
  fetch('<%= selectedForwarder ? "/admin/forwarders/" + selectedForwarder.deviceId : "/admin/messages-json" %>')
    .then(res => res.json())
    .then(data => {
      tbody.innerHTML = data.length
        ? data.map(renderRow).join('')
        : `<tr><td colspan="4" class="text-center">No messages found</td></tr>`;
    });

  // Forwarder click filter
  forwarderItems.forEach(item => {
    item.addEventListener('click', () => {
      const deviceId = item.getAttribute('data-device');
      window.location.href = `/admin/forwarders/${deviceId}`;
    });
  });

  // Listen for new messages in real-time
  socket.on('newMessage', addMessage);
</script>
</body>
</html>
