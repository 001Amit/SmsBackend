<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4">Admin Dashboard</h1>
    <a href="/admin/logout" class="btn btn-danger mb-3">Logout</a>

    <h5>Total messages: <%= total %></h5>

    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Sender</th>
          <th scope="col">Message</th>
          <th scope="col">Received At</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (messages && messages.length > 0) { %>
          <% messages.forEach(function(msg) { %>
            <tr data-id="<%= msg._id %>">
              <td><%= msg.sender %></td>
              <td><pre style="white-space: pre-wrap; margin:0;"><%= msg.message %></pre></td>
              <td><%= new Date(msg.createdAt).toLocaleString() %></td>
              <td>
                <button class="btn btn-sm btn-danger delete-btn">Delete</button>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="4" class="text-center">No messages found</td>
          </tr>
        <% } %>
      </tbody>
    </table>

    <!-- Pagination -->
    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-center">
        <% for(let p = 1; p <= pages; p++) { %>
          <li class="page-item <%= p === page ? 'active' : '' %>">
            <a class="page-link" href="/admin/dashboard?page=<%= p %>&limit=50"><%= p %></a>
          </li>
        <% } %>
      </ul>
    </nav>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('.delete-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          if (!confirm('Are you sure you want to delete this message?')) return;

          const row = btn.closest('tr');
          const id = row.getAttribute('data-id');

          fetch(`/admin/messages/${id}`, {
            method: 'DELETE',
            credentials: 'same-origin'
          })
          .then(res => res.json().catch(() => ({ ok: false, error: 'Invalid JSON' })))
          .then(data => {
            if (data.ok) {
              row.remove();
            } else {
              if (data.error === 'Unauthorized') {
                alert('Your session expired. Please log in again.');
                window.location.href = '/admin/login';
              } else {
                alert('Failed to delete: ' + (data.error || 'Unknown error'));
              }
            }
          })
          .catch(err => {
            console.error(err);
            alert('Server error while deleting.');
          });
        });
      });
    });
  </script>
</body>
</html>
