<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4">Admin Dashboard</h1>
    <a href="/admin/logout" class="btn btn-danger mb-3">Logout</a>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Sender</th>
          <th>Message</th>
          <th>Received At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="messagesBody">
        <% if (messages && messages.length > 0) { %>
          <% messages.forEach(function(msg) { %>
            <tr>
              <td><%= msg.sender %></td>
              <td><pre style="white-space: pre-wrap; margin:0;"><%= msg.message %></pre></td>
              <td><%= new Date(msg.createdAt).toLocaleString() %></td>
              <td>
                <form action="/admin/messages/<%= msg._id %>/delete" method="POST" onsubmit="return confirm('Delete this message?');">
                  <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="4" class="text-center">No messages found</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

<script>
  async function fetchLatestMessages() {
    try {
      const res = await fetch('/admin/messages/latest', { credentials: 'same-origin' });
      const data = await res.json();
      if (!data.ok) return;

      const tbody = document.getElementById('messagesBody');
      tbody.innerHTML = '';

      if (data.messages.length === 0) {
        tbody.innerHTML = '<tr><td colspan="4" class="text-center">No messages found</td></tr>';
        return;
      }

      data.messages.forEach(msg => {
        const row = document.createElement('tr');
        row.innerHTML = `
          <td>${msg.sender}</td>
          <td><pre style="white-space: pre-wrap; margin:0;">${msg.message}</pre></td>
          <td>${new Date(msg.createdAt).toLocaleString()}</td>
          <td>
            <form action="/admin/messages/${msg._id}/delete" method="POST" onsubmit="return confirm('Delete this message?');">
              <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            </form>
          </td>
        `;
        tbody.appendChild(row);
      });
    } catch (e) {
      console.error('Error fetching messages:', e);
    }
  }

  // Initial load + polling every 5 seconds
  fetchLatestMessages();
  setInterval(fetchLatestMessages, 5000);
</script>

</body>
</html>
