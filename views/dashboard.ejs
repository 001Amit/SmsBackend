<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="/socket.io/socket.io.js"></script>
  <style>
    body { background-color: #f8f9fa; }
    .dashboard-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
    }
    .table td.message-cell {
      white-space: pre-wrap;
      word-break: break-word;
      max-width: 500px;
      font-size: 0.95rem;
    }
    .device-badge {
      font-size: 0.75rem;
      background-color: #6c757d;
      color: white;
      border-radius: 0.25rem;
      padding: 0.15rem 0.4rem;
      margin-left: 0.25rem;
    }
  </style>
</head>
<body>
  <div class="container py-4">
    <div class="dashboard-header mb-4">
      <h1 class="mb-0">ðŸ“© Admin Dashboard</h1>
      <a href="/admin/logout" class="btn btn-danger">Logout</a>
    </div>

    <div class="card shadow-sm">
      <div class="card-body p-0">
        <table class="table table-hover table-striped mb-0">
          <thead class="table-dark">
            <tr>
              <th>Sender</th>
              <th>Message</th>
              <th>Received At</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="messagesBody">
            <% if (messages && messages.length > 0) { %>
              <% messages.forEach(function(msg) { %>
                <tr data-id="<%= msg._id %>">
                  <td>
                    <%= msg.sender %>
                    <% if (msg.deviceId) { %>
                      <span class="device-badge"><%= msg.deviceId %></span>
                    <% } %>
                  </td>
                  <td class="message-cell"><%= msg.message %></td>
                  <td><%= new Date(msg.createdAt).toLocaleString() %></td>
                  <td>
                    <form action="/admin/messages/<%= msg._id %>/delete" method="POST" onsubmit="return confirm('Delete this message?');">
                      <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="4" class="text-center">No messages found</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

<script>
  const socket = io();
  const tbody = document.getElementById('messagesBody');

  function renderRow(msg) {
    const deviceBadge = msg.deviceId
      ? `<span class="device-badge">${msg.deviceId}</span>`
      : '';
    return `
      <tr data-id="${msg._id}">
        <td>${msg.sender} ${deviceBadge}</td>
        <td class="message-cell">${msg.message}</td>
        <td>${new Date(msg.createdAt).toLocaleString()}</td>
        <td>
          <form action="/admin/messages/${msg._id}/delete" method="POST" onsubmit="return confirm('Delete this message?');">
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
          </form>
        </td>
      </tr>
    `;
  }

  function addMessage(msg) {
    if (!tbody.querySelector(`[data-id="${msg._id}"]`)) {
      tbody.insertAdjacentHTML('afterbegin', renderRow(msg));
    }
  }

  // Load initial data
  fetch('/admin/messages-json')
    .then(res => res.json())
    .then(data => {
      tbody.innerHTML = data.length
        ? data.map(renderRow).join('')
        : `<tr><td colspan="4" class="text-center">No messages found</td></tr>`;
    });

  // Listen for new messages
  socket.on('newMessage', addMessage);
</script>
</body>
</html>
